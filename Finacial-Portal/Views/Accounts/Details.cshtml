@model Finacial_Portal.Models.Account

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="btn-group-sm">
        @Html.ActionLink("Back to Household", "Details", "Households", new { id = Model.HouseholdId }, new {@class="btn btn-default"})
        
    </div>
</div>

<h2> @Html.DisplayFor(model => model.Household.Name)</h2>

<div class="card">
    <div class="header">
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <ul class="header-dropdown m-r--5">
            <li class="dropdown">
                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="material-icons">more_vert</i>
                </a>
                <ul class="dropdown-menu pull-right">
                    <li>@Html.ActionLink("Edit", "Edit", new { id = Model.Id })</li>
                    <li>@Html.ActionLink("Delete", "Delete", new { id = Model.Id })</li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="body">
        @if (Model.ReconBalance > 0)
        {
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box bg-purple hover-zoom-effect">
                        <div class="icon">
                            <i class="material-icons">attach_money</i>
                        </div>

                        <div class="content">
                            <div class="text">Balance</div>
                            <div class="number count-to" data-from="0" data-to="@Model.ReconBalance" data-speed="1200" data-fresh-interval="20">
                                @Model.ReconBalance
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        }
        else
        {
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box bg-purple hover-zoom-effect">
                        <div class="icon">
                            <i class="material-icons">attach_money</i>
                        </div>

                        <div class="content">
                            <div class="text">Current Balance</div>
                            <div class="number count-to" data-from="0" data-to="@Model.Balance" data-speed="1200" data-fresh-interval="20">
                                @Model.Balance
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }

    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
